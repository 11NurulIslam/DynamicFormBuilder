@model List<DynamicFormBuilder.Models.Form>
@{
    ViewData["Title"] = "All Forms";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>All Forms</h2>
    <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Create New Form
    </a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Form Title</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var form in Model)
                {
                    <tr>
                        <td>@form.Id</td>
                        <td>@form.Title</td>
                        <td>@form.CreatedDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                        <td>
                            <a asp-controller="Home" asp-action="Preview" asp-route-id="@form.Id"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> Preview
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <h4>No forms created yet</h4>
        <p>Start by creating your first form!</p>
        <a asp-controller="Home" asp-action="Create" class="btn btn-primary">Create Form</a>
    </div>
}